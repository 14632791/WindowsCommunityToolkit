<Page x:Class="Microsoft.Toolkit.Uwp.SampleApp.SamplePages.UsefulLinksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Grid Background="{StaticResource Brush-Grey-05}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,12,0,0"
                        HorizontalAlignment="Center">
                <TextBlock 
                    TextAlignment="Center"
                    Margin="0,0,0,20"
                    FontSize="22"
                    Text="Links and resources"></TextBlock>
                <StackPanel 
                    Margin="0,0,0,36"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock Text="Main entry point for all official UWP related resources"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               Margin="0"/>
                    <HyperlinkButton                                  
                                 FontSize="18"
                                 HorizontalAlignment="Center"
                                 Foreground="{StaticResource Brush-Blue-01}"
                                 NavigateUri="https://developer.microsoft.com/en-us/windows/apps/getstarted">
                        Developer Center
                    </HyperlinkButton>
                </StackPanel>
                <StackPanel 
                    Margin="0,0,0,35"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock Text="Getting started"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               Margin="0"/>
                    <HyperlinkButton Margin="0"
                                     FontSize="18"
                                     HorizontalAlignment="Center"
                                     Foreground="{StaticResource Brush-Blue-01}"
                                     NavigateUri="https://channel9.msdn.com/Series/C-Sharp-Fundamentals-Development-for-Absolute-Beginners">
                        C# fundamentals development for absolute beginners
                    </HyperlinkButton>                    
                    <HyperlinkButton Margin="0,0,0,12"
                                     FontSize="18"
                                     HorizontalAlignment="Center"
                                     Foreground="{StaticResource Brush-Blue-01}"
                                     NavigateUri="https://channel9.msdn.com/Series/Windows-10-development-for-absolute-beginners">
                        Windows 10 development for absolute beginners
                    </HyperlinkButton>
                </StackPanel>         
                <StackPanel 
                    Margin="0,0,0,35"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock Text="API samples for the Universal Windows Platform"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               Margin="0"/>
                    <HyperlinkButton FontSize="18"
                                     HorizontalAlignment="Center"
                                     Foreground="{StaticResource Brush-Blue-01}"
                                     NavigateUri="https://developer.microsoft.com/en-us/windows/samples">
                        Dev Center Code Samples
                    </HyperlinkButton>
                    <HyperlinkButton Margin="0,0,0,12"
                                     FontSize="18"
                                     HorizontalAlignment="Center"
                                     Foreground="{StaticResource Brush-Blue-01}"
                                     NavigateUri="https://github.com/Microsoft/Windows-universal-samples">
                        Windows 10 Samples
                    </HyperlinkButton>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>