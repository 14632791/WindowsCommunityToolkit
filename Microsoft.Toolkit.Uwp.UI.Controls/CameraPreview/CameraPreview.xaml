<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.Toolkit.Uwp.UI.Controls">
    <Style x:Name="MessageStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="Red"/>
    </Style>
    <Style TargetType="local:CameraPreview" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:CameraPreview">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Button x:Name="FrameSourceGroupButton" Margin="0,10">
                            <Image Source="{TemplateBinding FrameSourceGroupButtonIcon}" Width="25"></Image>
                        </Button>
                        <MediaPlayerElement x:Name="MediaPlayerElementControl" Grid.Row="1" MinWidth="300" Width="400" HorizontalAlignment="Left">
                        </MediaPlayerElement>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

