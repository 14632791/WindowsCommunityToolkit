<Window x:Class="TestSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestSample"
        xmlns:local1="clr-namespace:Microsoft.Windows.Interop.Sample;assembly=Microsoft.Windows.Interop.Sample"
        xmlns:controls="clr-namespace:Microsoft.Toolkit.Win32.UI.Controls.WPF;assembly=Microsoft.Toolkit.Win32.UI.Controls"
        xmlns:compatible="clr-namespace:Microsoft.Toolkit.Win32.UI.Controls.WPF.Compatible;assembly=Microsoft.Toolkit.Win32.UI.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >

        <!--<Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>-->
        <TabControl>
            <TabItem>
                <TabItem.Header>Samples</TabItem.Header>
                <StackPanel Background="Azure">
                    <local1:WrappedRectangle Width="50" Height="75" Fill="Blue"/>
                    <local1:WrappedRectangle Width="200" Height="100" Fill="Red"/>
                    <local1:WrappedButton Content="This is a UWP Button" Height="60" Width="160"/>
                    <local1:WrappedRectangle Width="25" Height="100" Fill="Green"/>
                    <local1:WrappedButton Content="Another long UWP Button" Height="40" Width="300"/>

                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>MediaPlayerElement</TabItem.Header>
                <controls:MediaPlayerElement x:Name="mediaPlayerElement" 
                                     Source="https://mediaplatstorage1.blob.core.windows.net/windows-universal-samples-media/elephantsdream-clip-h264_sd-aac_eng-aac_spa-aac_eng_commentary-srt_eng-srt_por-srt_swe.mkv"
                                     AutoPlay="True" Margin="5" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" AreTransportControlsEnabled="True" />
            </TabItem>
            <TabItem>
                <TabItem.Header>Ink Controls (Canvas / Toolbar)</TabItem.Header>
                <DockPanel LastChildFill="True" >
                    <controls:InkToolbar  DockPanel.Dock="Top" x:Name="inkToolbar" Grid.Row="0" TargetInkCanvas="{x:Reference Name=inkCanvas}" Initialized="inkToolbar_Initialized" ActiveToolChanged="inkToolbar_ActiveToolChanged"
                                  InkDrawingAttributesChanged="inkToolbar_InkDrawingAttributesChanged" IsStencilButtonCheckedChanged="inkToolbar_IsStencilButtonCheckedChanged"  >
                        <controls:InkToolbarCustomToolButton x:Name="toolButtonLasso" />
                    </controls:InkToolbar>
                    <!--Inking area -->
                    <controls:InkCanvas x:Name="inkCanvas" DockPanel.Dock="Top" Loaded="inkCanvas_Loaded"/>
                </DockPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>WebView</TabItem.Header>
                <!--WebBrowser /-->
                <compatible:WebViewCompatible Source="http://www.bing.com" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <!--WebBrowser Source="http://www.bing.com"/-->

            </TabItem>
            <TabItem>
                <TabItem.Header>MapControl</TabItem.Header>
                <controls:MapControl x:Name="myMap" Loaded="myMap_Loaded"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>SwapChainPanel</TabItem.Header>
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="8" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="8" />
                        </Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Margin" Value="8, 0, 0, 0" />
                            <Setter Property="MinWidth" Value="32" />
                        </Style>
                        <Style TargetType="Slider">
                            <Setter Property="Margin" Value="8, 0, 8, 0" />
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <!-- Sample overlay -->
                    <StackPanel x:Name="OverlayPanel" Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                        <Image Source="Assets\\storelogo-sdk.png" VerticalAlignment="Top" Stretch="None" Margin="10" />
                        <TextBlock Text="Advanced Color Image Viewer" Foreground="White" FontSize="36" TextWrapping="NoWrap" VerticalAlignment="Stretch" />
                    </StackPanel>
                    <StackPanel x:Name="ControlsPanel" Grid.Row="1" Grid.Column="0" Background="Black" Opacity="0.8">
                        <Button Click="Button_Click">Open image</Button>
                        <Button Click="Button_Click_1">Reset</Button>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="ScalingCheckBox" Checked="ScalingCheckBox_Checked" Unchecked="ScalingCheckBox_Unchecked"></CheckBox>
                            <TextBlock>Disable scaling</TextBlock>
                        </StackPanel>
                        <TextBlock>Image colorspace:</TextBlock>
                        <!--<ComboBox x:Name="ColorspacesCombo" ItemsSource="{x:Bind ViewModel.Colorspaces}" SelectionChanged="ComboChanged">
                            --><!--<ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="local:ColorspaceOption">
                                    <TextBlock Text="{x:Bind Description}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>--><!--
                        </ComboBox>-->
                        <ComboBox x:Name="ColorspacesCombo" SelectionChanged="ColorspacesCombo_SelectionChanged">
                            <!--<ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="local:ColorspaceOption">
                                    <TextBlock Text="{x:Bind Description}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>-->
                        </ComboBox>
                        <StackPanel x:Name="TonemapperPanel">
                            <TextBlock>Tonemapper:</TextBlock>
                            <!--<ComboBox x:Name="TonemappersCombo" ItemsSource="{x:Bind ViewModel.Tonemappers}" SelectionChanged="ComboChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="local:TonemapperOption">
                                        <TextBlock Text="{x:Bind Description}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>-->
                            <ComboBox x:Name="TonemappersCombo"  SelectionChanged="TonemappersCombo_SelectionChanged">
                                <!--<ComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="local:TonemapperOption">
                                        <TextBlock Text="{x:Bind Description}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>-->
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="WhiteLevelPanel">
                            <TextBlock>White level scale:</TextBlock>
                            <Slider x:Name="WhiteLevelSlider" Minimum="0.5" Maximum="10"  Value="1.0" ValueChanged="WhiteLevelSlider_ValueChanged"></Slider>
                        </StackPanel>
                        <TextBlock />
                        <TextBlock>Image information</TextBlock>
                        <TextBlock x:Name="ImageHasColorProfile">Color profile:</TextBlock>
                        <TextBlock x:Name="ImageBitDepth">Bits per pixel:</TextBlock>
                        <TextBlock x:Name="ImageIsFloat">Floating point:</TextBlock>
                        <TextBlock />
                        <TextBlock>Display information</TextBlock>
                        <TextBlock x:Name="DisplayACState">Advanced color:</TextBlock>
                        <TextBlock x:Name="DisplayPeakLuminance">Peak luminance:</TextBlock>
                        <TextBlock x:Name="DisplayBitDepth">Bits per channel:</TextBlock>
                        <TextBlock />
                        <TextBlock>Press H to hide UI</TextBlock>
                    </StackPanel>
                    <controls:SwapChainPanel x:Name="swapChainPanel" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Loaded="swapChainPanel_Loaded"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
